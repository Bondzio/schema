<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.scandihealth.olympicsc.activities.model.Activity</class>
        <class>com.scandihealth.olympicsc.event.model.Event</class>
        <class>com.scandihealth.olympicsc.location.model.Location</class>
        <class>com.scandihealth.olympicsc.imageupload.model.Logo</class>
        <class>com.scandihealth.olympicsc.user.model.User</class>
        <class>com.scandihealth.olympicsc.data.Versioninformation</class>
        <class>com.scandihealth.olympicsc.teams.model.Team</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/olympicsc"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="mysql01"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="CustomValues">
        <class>com.scandihealth.olympicsc.customvalues.model.Enumtype</class>
        <class>com.scandihealth.olympicsc.customvalues.model.Stringtype</class>
        <class>com.scandihealth.olympicsc.customvalues.model.Valuerange</class>
        <class>com.scandihealth.olympicsc.customvalues.model.ValueTypes</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/customvalues"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="mysql01"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>